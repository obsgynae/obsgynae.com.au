<div class="card">
	<div class="card-header">
		<div class="card-subtitle text-gray">
                    {{ (episode.header.date)|date('d M Y') }}
      </div>
		<div class="card-title">
          <h4><a href ="{{ episode.url }}"> {{ episode.title }} </a></h4>
      </div>
	</div>
	<div class="card-body">
                    {% if episode.summary %}
                        {{ (episode.summary)|striptags|truncate(120) }}
                    {% else %}
                        No summary available.
                    {% endif %}

	</div>
	<div class="card-footer">
      Duration: <time> {{ episode.header.podcast.audio.meta.duration }} </time>
      <br>
      <button class="btn btn-sm">Play Episode <i class="fa fa-play"></i></button>
      <br>      
      <span class="tags">
    {% for tag in episode.taxonomy.tag %}
    <a class="label label-rounded {{ label_style ?: 'label-secondary' }} p-category" href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}#body-wrapper">{{ tag }}</a>
    {% endfor %}
</span>
</div>
</div>

  
